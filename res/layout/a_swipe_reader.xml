<android.support.v4.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/asr_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">    
    <RelativeLayout
        android:id="@+id/asr_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <pl.epodreczniki.view.DisableableViewPager
            android:id="@+id/asr_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <LinearLayout 
            android:id="@+id/asr_top_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/reader_button_size"
            android:background="#bbFFFFFF"
            >
            <ImageButton
                android:id="@+id/asr_btn_back"
                android:layout_width="@dimen/reader_button_size"
                android:layout_height="@dimen/reader_button_size"                
                android:background="@null" 
                android:contentDescription="@string/back_to_list"
                android:src="@drawable/reader_back"
                android:scaleType="centerInside"                                               
                />
            <ImageButton
                android:id="@+id/asr_btn_hide" 
                android:layout_width="@dimen/reader_button_size"
                android:layout_height="@dimen/reader_button_size"                
                android:background="@null"
                android:contentDescription="@string/hide_navigation"                
                android:scaleType="centerInside"
                android:src="@drawable/reader_fold_up" 
                android:adjustViewBounds="true"              
                />
            <View
                android:layout_width="@dimen/reader_button_size"
                android:layout_height="match_parent"
                android:visibility="invisible" 
                />
            <TextView
                android:id="@+id/asr_title"
                android:layout_width="0dp"
                android:layout_height="@dimen/reader_button_size"
                android:layout_weight="1"
                android:text="@null"                 
                android:textColor="#000000"
                android:gravity="center"                
                style="@android:style/TextAppearance.Medium"                
                />            
            <ImageButton
                android:id="@+id/asr_btn_a_plus" 
                android:layout_width="@dimen/reader_button_size"
                android:layout_height="@dimen/reader_button_size"                
                android:background="@null"
                android:contentDescription="@string/desc_nav_a_plus"
                android:scaleType="centerInside"
                android:src="@drawable/reader_aplus" 
                android:adjustViewBounds="true"
                />
            <ImageButton
                android:id="@+id/asr_btn_a_minus" 
                android:layout_width="@dimen/reader_button_size"
                android:layout_height="@dimen/reader_button_size"                
                android:background="@null"
                android:contentDescription="@string/desc_nav_a_minus"
                android:scaleType="centerInside"
                android:src="@drawable/reader_aminus"
                android:adjustViewBounds="true" 
                />
            <ImageButton
                android:id="@+id/asr_btn_toc"
                android:layout_width="@dimen/reader_button_size"
                android:layout_height="@dimen/reader_button_size"                
                android:background="@null"
                android:contentDescription="@string/desc_nav_toc"
                android:scaleType="centerInside"
                android:src="@drawable/reader_toc" 
                android:adjustViewBounds="true"
                />            
        </LinearLayout>
        <ImageButton
            android:id="@+id/asr_btn_prev"
            android:layout_width="@dimen/reader_nav_button_size"
            android:layout_height="@dimen/reader_nav_button_size"
            android:layout_centerVertical="true"            
            android:background="@null"
            android:contentDescription="@string/action_settings"
            android:src="@drawable/ic_icon_nav_left" 
            android:scaleType="fitXY"/>        

        <ImageButton
            android:id="@+id/asr_btn_next"
            android:layout_width="@dimen/reader_nav_button_size"
            android:layout_height="@dimen/reader_nav_button_size"
            android:layout_alignParentRight="true"            
            android:layout_centerVertical="true"            
            android:background="@null"
            android:contentDescription="@string/action_settings"            
            android:src="@drawable/ic_icon_nav_right" 
            android:scaleType="fitXY"/>
        <RelativeLayout 
            android:id="@+id/asr_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/overlay"
            android:visibility="gone"
            >
            <ProgressBar 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>  
    <include layout="@layout/incl_drawer"/>      
</android.support.v4.widget.DrawerLayout>
